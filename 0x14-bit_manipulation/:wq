#include "main.h"
/**
  *set_bit - Returns the value of a bit at a given index.
  *@index: variable
  *@n: variable
  *Return: the value of a bit at a given index.
  */
int set_bit(unsigned long int *n, unsigned int index)
{
	unsigned int i = 1;

	if (index > 63)
	{
		return (-1);
	}
	i = i << (index - 1);
	i = i | *n;
	return (i);
}
